.a-modal-zoom-image
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	display none
	align-items center
	justify-content center
	background rgba(0,0,0,.5)
	z-index 9999

.a-inner-background
	padding 0
	top 0 
	bottom 0
	margin auto
	height 90%
	display none
	overflow hidden
	background-color #fff
	background-repeat no-repeat
	align-items center
	position absolute
	justify-content center
	background-image url('../img/header.png')

.a-outer-for-image
	height 100%
	overflow hidden
	position relative
	left 0
	top 0

.a-yellow-close
	background-position -357px -245px i

.a-images-to-height img 
	position relative
	height 100%

.a-outer-for-image img 
	position relative
	
.a-image-slide-controls
	position absolute
	width 100%
	top 0
	height 100%
	
.a-prev 
	background-position -342px -313px
	top 50%
	margin-top -30px
	left 20px
	width 33px
	height 60px
	position absolute
	display block 
	cursor pointer
	background-image url('../img/sprite.png')
	z-index 10
	transition left .5s ease-out
	&:hover
		left 10px
	
.a-next
	background-position -381px -313px
	top 50%
	margin-top -30px
	right 20px
	width 33px
	height 60px
	position absolute
	display block 
	cursor pointer
	background-image url('../img/sprite.png')
	transition right .5s ease-out
	z-index 10
	&:hover
		right 10px