@font-face
   font-family HelveticaLight
   font-style normal
   src url('../fonts/HelveticaNeueCyr-Light.otf')

@font-face
   font-family HelveticaThin
   font-style normal
   src url('../fonts/HelveticaNeueCyr-Thin.otf')

@font-face
   font-family HelveticaUltraLight
   font-style normal
   src url('../fonts/HelveticaNeueCyr-UltraLight.otf')

@font-face
   font-family HelveticaMedium
   font-style normal
   src url('../fonts/HelveticaNeueCyr-Medium.otf')


@font-face
   font-family HelveticaRoman
   font-style normal
   src url('../fonts/HelveticaNeueCyr-Roman.otf')
   
@font-face
   font-family HelveticaBold
   font-style normal
   src url('../fonts/HelveticaNeueCyr-Bold.otf')

*
  box-sizing border-box

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i, dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  background transparent
  border 0
  font-size 100%
  margin 0
  outline 0
  padding 0
  vertical-align baseline

html, body 
  line-height 1 
  font-family Arial
  height 100%
  min-height 100%

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

nav ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none

a
  background transparent
  font-size 12px
  margin 0
  padding 0
  vertical-align baseline
  text-decoration none

ol li 
  font-family HelveticaThin
  font-size 16px
  padding 10px 0
  line-height 20px

mark
    font-style italic
    font-weight 700

h1,h2,h3,h4,h5,h6
  font-weight normal

i 
  font-style normal

del
  text-decoration line-through

abbr[title], dfn[title]
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0
  border 1px solid fontg
  width 100%

th
  background greys
  font-weight 400
  padding 10px
  text-align left
  font-family HelveticaLight
  border 1px solid fontg
  
td 
  border 1px solid fontg
  padding 10px
  font-family HelveticaLight
/* change border colour to suit your needs */
hr
  border 0
  border-top 1px solid #ccc
  display block
  height 1px
  margin 1em 0
  padding 0

input, select 
  vertical-align middle
  padding 10px
  border none

button 
  border none

.a-main
  position relative
  width 100%
  overflow hidden
  
.a-min-size-font
  font-size 10px
  
.a-button-black
  background rgba(21,163,153,1)
  text-transform uppercase
  color #fff
  font-size 30px
  font-family HelveticaThin
  padding 25px 25px 22px 25px
  letter-spacing 2px
  line-height 13px
  transition all .4s ease-out
  cursor pointer
  border 2px solid rgba(21,163,153,1)
  &:hover 
    color #000
    background rgba(0,0,0,0)

.a-button-black.a-inactive
  background rgba(0,0,0,0) i
  color #000 i
  opacity .5 i
  cursor default
  &:active, &:focus, &:hover
    box-shadow none
    outline none

.a-button-white
  background rgba(0,0,0,0)
  border 2px solid #000
  padding 16px 17px 14px
  font-size 14px
  font-family HelveticaRoman
  color #000
  transition all .4s ease-out
  cursor pointer
  line-height 13px
  &:hover 
    color #fff 
    background rgba(0,0,0,1)

.a-rates-inactive .a-button-white
  background rgba(0,0,0,0) i
  color #000 i
  opacity .5 i
  cursor default
  opacity .5
  &:hover
    background rgba(0,0,0,0) i
    color #000 i
  &:active, &:focus, &:hover
    box-shadow none
    outline none
  
.__uppercase
  text-transform uppercase
  
.a-link-item-green
  font-size 14px
  font-family HelveticaRoman
  color #15a399
  padding 4px 0 1px
  border-bottom 1px solid rgba(21, 163, 153, 0.23)
  transition all .2s ease-out
  &:hover
    border-bottom 1px solid rgba(0,0,0,0)
  
.a-link-item
  margin 0 10px
  padding 1px 0
  color #000
  font-family HelveticaRoman
  font-size 14px
  border-bottom 1px solid rgba(0,0,0,.2)
  transition all .2s ease-out
  &:hover
    border-bottom 1px solid rgba(0,0,0,0)
    
.a-head-font-left-side 
  padding 0px 0px 30px 0
  font-size 50px
  width w
  margin auto
  display block
  position relative
  text-align left
  font-family HelveticaThin
  &:before
    content ""
    position absolute
    width 112px
    height 50px
    background-image url('../img/sprite.png')
    background-position -474px -199px
    z-index 1
    right -55px
    top 30px
    
.__in_flex
  width 100%
  
.__in_flex_wrap
  flex-wrap wrap
  
.a-preloaders
  width 75px
  height 75px
  display block
  background-repeat no-repeat
  position absolute
  left 0
  right 0
  margin auto
  top 0
  bottom 0
  
.__blue-preloader
  background-position -668px -286px
  background-image url(../img/sprite.png)
  animation rotate 2s ease infinite
  &:before
    background-repeat no-repeat
    position absolute
    content ""
    width 55px
    top 10px
    left 10px
    height 55px
    background-position -693px -223px
    display block
    background-image url(../img/sprite.png)
    animation rotateOut 2s ease infinite

.__yellow-preloader
  animation rotateOut 2s ease infinite
  background-image url(../img/sprite.png)
  background-position -668px -428px
  &:before
    background-repeat no-repeat
    position absolute
    content ""
    width 55px
    top 10px
    left 10px
    height 55px
    background-position -693px -367px
    display block
    background-image url(../img/sprite.png)
    animation rotate 2s ease infinite

.a-invalid
  padding 30px 0 0
  color #fc392c

.a-animates-top-goods
  animation opacity 2s ease

.a-back-opacity
  position absolute 
  width 100%
  z-index 10
  height 100%
  background rgba(245,245,245,.9)

.a-flexed-block-main
  display flex 
  flex-direction column
  justify-content space-between
  min-height 100%

.a-notify
  padding 20px 0 0
  color reds
  font-size 18px
  font-family HelveticaThin

.a-reds-color
  color reds i

.comments-block
  width w
  margin 0 auto

.a-text-preloader
  position relative
  font-size 25px
  font-family HelveticaThin
  text-align center
  top 30%

.a-classic-button-all-lots
  margin 0 auto 30px
  border 2px solid green
  display block 
  background transparent
  transition .5s
  padding 20px 40px
  font-family HelveticaThin
  font-size 20px
  cursor pointer
  letter-spacing 1px
  position relative
  &:before
    content ""
    position absolute
    width 95px
    height 95px
    left -53px
    top -49px
    background-image url('../img/sprite.png')
    background-position -483px -293px
  &:hover 
    border 2px solid pink

@keyframes opacity{
  0%{
    opacity 0
  }
  100%{
    opacity 1
  }
}

@keyframes rotate{
  0%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(360deg)
  }
}

@keyframes rotateOut{
  0%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(-360deg)
  }
}